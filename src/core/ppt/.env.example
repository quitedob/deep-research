# PPT模块环境配置示例
# 复制此文件为 .env 并填入实际的API密钥

# DeepSeek API配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# Ollama本地服务配置
OLLAMA_HOST=http://localhost:11434
OLLAMA_PPT_MODEL=llama3.2:3b

# 国内厂商API配置（可选）
# 阿里云DashScope
ALIYUN_API_KEY=your_aliyun_api_key_here
ALIYUN_MODEL=qwen-plus

# 百度文心一言
BAIDU_API_KEY=your_baidu_api_key_here
BAIDU_SECRET_KEY=your_baidu_secret_key_here
BAIDU_MODEL=ernie-bot

# 腾讯混元
TENCENT_SECRET_ID=your_tencent_secret_id_here
TENCENT_SECRET_KEY=your_tencent_secret_key_here
TENCENT_MODEL=hunyuan-lite
TENCENT_REGION=ap-guangzhou

# 讯飞星火
XFYUN_APP_ID=your_xfyun_app_id_here
XFYUN_API_KEY=your_xfyun_api_key_here
XFYUN_API_SECRET=your_xfyun_api_secret_here
XFYUN_MODEL=spark-3.5

# 图像服务配置（可选）
UNSPLASH_ACCESS_KEY=your_unsplash_access_key_here
PEXELS_API_KEY=your_pexels_api_key_here

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=./logs/ppt_module.log

# 性能配置
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=300
ENABLE_CACHING=true
CACHE_TTL=1800