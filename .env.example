# LLM Provider API Keys
DEEPSEEK_API_KEY=your_deepseek_api_key_here
BIGMODEL_API_KEY=your_zhipu_api_key_here

# Ollama Configuration (for local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=embeddinggemma
OLLAMA_GENERATION_MODEL=gemma3:4b

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
DB_MIN_POOL_SIZE=5
DB_MAX_POOL_SIZE=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Memory System Configuration
MEMORY_ENABLED=true
CHROMA_PERSIST_DIR=./data/chroma
CHROMA_COLLECTION_NAME=user_memories
HYDE_ENABLED=true
HYDE_TEMPERATURE=0.7
HYDE_MAX_TOKENS=150

# Memory Retrieval
MEMORY_TOP_K=5
MEMORY_MIN_VALIDITY=0.7

# Memory Cache
MEMORY_CACHE_ENABLED=true
MEMORY_CACHE_TTL=3600
MEMORY_QUERY_CACHE_TTL=300

# Memory Extraction
MEMORY_EXTRACTION_TEMP=0.3
MEMORY_EXTRACTION_MAX_TOKENS=500

# Memory Performance
MEMORY_BATCH_SIZE=10
MEMORY_MAX_FACT_LENGTH=500
MEMORY_MIN_FACT_LENGTH=5

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
